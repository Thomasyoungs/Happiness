<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <attr name="siArrowPosition">
        <enum name="left" value="0" />
        <enum name="right" value="1" />
    </attr>
    <attr name="siBorderType">
        <enum name="stroke" value="0" />
        <enum name="fill" value="1" />
    </attr>
    <attr name="siStrokeCap">
        <enum name="butt" value="0" />
        <enum name="round" value="1" />
        <enum name="square" value="2" />
    </attr>
    <attr name="siStrokeJoin">
        <enum name="bevel" value="0" />
        <enum name="miter" value="1" />
        <enum name="round" value="2" />
    </attr>
    <declare-styleable name="ShaderImageView">
        <attr name="siSquare" format="boolean" />
        <attr name="siBorderColor" format="color" />
        <attr name="siBorderWidth" format="dimension" />
        <attr name="siBorderAlpha" format="float" />
        <attr name="siForeground" format="integer|reference" />
        <!-- Rounded Image View -->
        <attr name="siRadius" format="dimension" />
        <!--BubbleImageView-->
        <attr name="siArrowPosition" />
        <attr name="siTriangleHeight" format="dimension" />
        <!--PorterImageView-->
        <attr name="siShape" format="integer|reference" />
        <!--ShaderImageView-->
        <attr name="siBorderType" />
        <attr name="siStrokeCap" />
        <attr name="siStrokeJoin" />
        <attr name="siStrokeMiter" format="dimension" />
    </declare-styleable>
    <declare-styleable name="CircleTextView">
        <attr name="circleColor" format="color" />
    </declare-styleable>
    <declare-styleable name="CustomTextView">
        <attr name="customColor" format="color" />
    </declare-styleable>
    <!-- TopActionBar -->
    <declare-styleable name="TopActionBar">
        <attr name="topbarTitle" format="string"/>
        <attr name="topbarIsLeftShow" format="boolean"/>
        <attr name="topbarLeftImgRes" format="reference"/>
        <attr name="topbarLeftText" format="string"/>
        <attr name="topbarIsRightShow" format="boolean"/>
        <attr name="topbarRightImgRes" format="reference"/>
        <attr name="topbarRightText" format="string"/>
        <attr name="topbarRightClassName" format="string"/>
        <attr name="topbarIsRight2Show" format="boolean"/>
        <attr name="topbarRight2ImgRes" format="reference"/>
        <attr name="topbarRight2Text" format="string"/>
        <attr name="topbarRight2ClassName" format="string"/>
    </declare-styleable>
    <!-- 右侧带清空按钮文本编辑框 EditTextWithClearButton 的自定义属性 -->
    <declare-styleable name="EditTextWithClearButton"><!-- 自定义清空按钮绘制素材 -->
        <attr name="clearButtonDrawable" format="integer"/>
        <!-- 自定义清空按钮位置水平偏移 -->
        <attr name="clearButtonOffset" format="dimension"/>
    </declare-styleable>


    <declare-styleable name="SpringView">
        <attr name="type">
            <enum name="overlap" value="0" />
            <enum name="follow" value="1" />
        </attr>
        <attr name="give">
            <enum name="both" value="0" />
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
            <enum name="none" value="3" />
        </attr>
        <attr name="header" format="reference" />
        <attr name="footer" format="reference" />
    </declare-styleable>
</resources>